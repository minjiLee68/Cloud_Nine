<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_minji" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/Gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSizeBottomLeft">13%</item>
        <item name="cornerSizeBottomRight">13%</item>
    </style>

    <!-- calendar custom -->
    <style name="CalendarViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CalendarViewCustom" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="colorAccent">@color/colorPrimarySecond</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="CalendarViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:weekNumberColor">@color/rad</item>
    </style>

    <style name="CalendarViewYearCustomText" parent="android:TextAppearance.DeviceDefault">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
</resources>